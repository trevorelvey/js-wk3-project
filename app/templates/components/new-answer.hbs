<div class="container">
  {{#if addNewAnswer}}
    <h1>Answer this question:</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id="author"}}
          </div>

          <div class="form-group">
            <label for="text">Answer</label>
            {{input value=text id="text"}}
          </div>

          <button class="btn" {{action 'saveAnswer'}}>Save</button>
        </form>
      </div>
  {{else}}
    <button class="btn" {{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
</div>
