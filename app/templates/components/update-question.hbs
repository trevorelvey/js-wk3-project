{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Question Author:</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="title">Question Title:</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="text">Question Text:</label>
          {{input value=text id="text" placeholder=question.text}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
